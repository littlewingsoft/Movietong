<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/currentMovie_imageView_poster"
                android:scaleType="fitXY"
                android:src="@drawable/stillcut_2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="조선명탐정:사라진 놉의 딸"
                android:id="@+id/currentMovie_textView_title"
                android:layout_marginLeft="4dp"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3월 18일 개봉"
                android:id="@+id/currentMovie_textView_day"
                android:layout_marginLeft="4dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="128분 청소년관람불가"
                android:id="@+id/currentMovie_textView_grade"
                android:layout_marginLeft="4dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="장르: 액션,범죄,스릴러"
                android:id="@+id/currentMovie_textView_genre"
                android:layout_marginLeft="4dp"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentMovie_imageButton_open"
                android:layout_gravity="center_vertical"
                android:src="@drawable/list_arr_big"
                android:scaleType="center"
                android:background="@null" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
